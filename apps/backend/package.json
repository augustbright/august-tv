{
  "name": "@august-tv/backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "prestart:dev": "yarn build:dependencies",
    "build:dependencies": "lerna run build --scope=@august-tv/common --scope=@august-tv/db --scope=@august-tv/server",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/august-tv-backend/main",
    "lint": "yarn lint:pretty && yarn lint:es && yarn lint:ts",
    "lint:pretty": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\" --write",
    "lint:es": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:ts": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/august-tv-backend/test/jest-e2e.json",
    "generateDtoTypes": "openapi-typescript http://localhost:3101/swagger-json --output ../../packages/dto/api.d.ts",
    "build:types": "tsc -p tsconfig.generate-types.json"
  },
  "dependencies": {
    "@august-tv/common": "^1.0.0",
    "@august-tv/db": "^1.0.0",
    "@august-tv/server": "^1.0.0",
    "@distube/ytdl-core": "^4.14.4",
    "@dotenvx/dotenvx": "^1.14.2",
    "@nestjs/axios": "^3.0.3",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/microservices": "^10.4.5",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-socket.io": "^10.4.4",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/websockets": "^10.4.4",
    "axios": "^1.7.7",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie": "^1.0.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.4.5",
    "express-fileupload": "^1.5.1",
    "firebase-admin": "^12.6.0",
    "fluent-ffmpeg": "^2.1.3",
    "kafkajs": "^2.2.4",
    "lodash": "^4.17.21",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "sharp": "^0.33.5",
    "swagger-ui-express": "^5.0.1",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/cookie": "^0.6.0",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.17",
    "@types/express-fileupload": "^1.5.1",
    "@types/fluent-ffmpeg": "^2.1.26",
    "@types/jest": "^29.5.2",
    "@types/lodash": "^4.17.10",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "jest": "^29.5.0",
    "openapi-typescript": "^7.4.1",
    "prettier": "^3.3.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/"
    ]
  }
}