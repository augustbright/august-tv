{
  "name": "august-tv",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build:packages": "yarn workspaces foreach --from './packages/*' -W -t run build",
    "build": "yarn workspaces foreach --all -t run build",
    "lint": "lerna run lint --stream",
    "lint:ts": "lerna run lint:ts --stream",
    "generate-types": "yarn generate:db && yarn generate:dtoTypes",
    "generate:db": "lerna run --stream --scope=@august-tv/db prisma:generate",
    "generate:dtoTypes": "lerna run --stream --scope=@august-tv/backend build:types",
    "start:dev": "lerna run start:dev --stream"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "devDependencies": {
    "@types/node": "^22.7.4",
    "lerna": "^8.1.8",
    "ts-node": "^10.9.2",
    "type-fest": "^4.26.1",
    "typescript": "^5.6.2"
  },
  "packageManager": "yarn@4.5.1"
}
